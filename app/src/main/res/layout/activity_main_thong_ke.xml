<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:weightSum="1">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="THỐNG KÊ ĐÃ BÁO"
        android:id="@+id/textView8" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="309dp"
        android:layout_height="78dp"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Loại VP:"
            android:id="@+id/txtLoaiVP2"
            android:autoText="false"
            android:textAlignment="center" />

        <Spinner
            android:layout_width="131dp"
            android:layout_height="37dp"
            android:id="@+id/spLoai2" />
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rdGroupDoi2">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đội 1"
                android:id="@+id/rdDoi1_2"
                android:textSize="12dp"
                android:checked="false" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đội 2"
                android:id="@+id/rdDoi2_2"
                android:textSize="12dp"
                android:checked="false" />
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Đường:"
            android:id="@+id/txtDuong2"
            android:layout_weight="0.10" />

        <Spinner
            android:layout_width="30dp"
            android:layout_height="45dp"
            android:id="@+id/spDuong2"
            android:layout_weight="0.65" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cập nhập"
            android:id="@+id/btnCapNhap" />


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thông tin đã gửi"
        android:id="@+id/textView3"
        android:layout_weight="0.05" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Ngày"
            android:id="@+id/textView4"
            android:layout_weight="0.12"
            android:background="#05fcfc" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Đường"
            android:id="@+id/textView5"
            android:layout_weight="0.06"
            android:background="#05fcfc" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Đội"
            android:id="@+id/textView6"
            android:layout_weight="0.21"
            android:background="#05fcfc" />

        <TextView
            android:layout_width="219dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Nội dung"
            android:id="@+id/textView7"
            android:background="#05fcfc" />
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="203dp"
        android:id="@+id/lvDanhSach"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sao Lưu"
            android:id="@+id/btnSaoLuu" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quay Lại"
            android:id="@+id/btnQuayLai" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thoát"
            android:id="@+id/btnThoat2" />
    </LinearLayout>


</LinearLayout>
